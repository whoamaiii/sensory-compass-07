{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "./dist/scripts",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*.ts",
    "tailwind.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "tests/**/*.ts",
    "postcss.config.js",
    "eslint.config.js"
  ]
}
